<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SeeYou" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul</item>
        <item name="colorPrimaryVariant">#BE7100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/azul_obscuro</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Trasparente</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BottomNavigation"  parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/searchbar</item>
        <item name="itemIconSize">105px</item>
        <item name="colorPrimary">@color/morado</item>
        <item name="android:textColorSecondary">@color/morado</item>
        <item name="itemPaddingBottom">20px</item>
        <item name="itemIconPadding">20px</item>

    </style>
    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/Trasparente</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="behavior_fitToContents">true</item>

        <item name="behavior_peekHeight">1200dp</item> // yep, that helped to skip collapsed state at initial
        <item name="behavior_hideable">true</item>
    </style>

</resources>