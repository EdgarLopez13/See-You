<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContenedorTarjeta"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris_muyclaro"
    android:orientation="vertical"
    tools:context=".TarjetaFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/fondodegradado"
                android:elevation="5dp"
                android:src="@drawable/perfil_foreground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/TVnombreubicacionmarker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:text="Titulo"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/TVubicacionmarker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/TVdescripcionmarker"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/TVdescripcionmarker" />

            <TextView
                android:id="@+id/TVmasinformacionmarker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:text="TextView"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/TVubicacionmarker"
                app:layout_constraintStart_toStartOf="@+id/TVubicacionmarker"
                app:layout_constraintTop_toBottomOf="@+id/TVubicacionmarker" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="DESCRIPCION"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toEndOf="@+id/TVdescripcionmarker"
                app:layout_constraintStart_toStartOf="@+id/TVdescripcionmarker"
                app:layout_constraintTop_toBottomOf="@+id/TVnombreubicacionmarker" />

            <TextView
                android:id="@+id/TVdescripcionmarker"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:justificationMode="inter_word"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <Button
                android:id="@+id/BTNviajarmarker"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button2"
                android:text="INICIAR VIAJE"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="@+id/BTNeliminarmarker"
                app:layout_constraintEnd_toStartOf="@+id/TVbotones"
                app:layout_constraintStart_toStartOf="@+id/TVmasinformacionmarker"
                app:layout_constraintTop_toTopOf="@+id/BTNeliminarmarker" />

            <Switch
                android:id="@+id/SWhabilitar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Habilitar"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/textView12" />

            <Button
                android:id="@+id/BTNeliminarmarker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button"
                android:text="ELIMINAR MARCADOR"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/TVmasinformacionmarker"
                app:layout_constraintStart_toEndOf="@+id/TVbotones"
                app:layout_constraintTop_toBottomOf="@+id/TVmasinformacionmarker" />

            <TextView
                android:id="@+id/TVbotones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="@+id/TVmasinformacionmarker"
                app:layout_constraintStart_toStartOf="@+id/TVmasinformacionmarker"
                app:layout_constraintTop_toBottomOf="@+id/TVmasinformacionmarker" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>