<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Contenedormarker"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo_de_tarjeta"
    android:orientation="vertical"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TVmarcadornum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="MARCADOR No."
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/fondodegradado"
            android:elevation="5dp"
            android:src="@drawable/perfil_foreground"
            app:layout_constraintBottom_toTopOf="@+id/textView12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TVnombreubicacionmarker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:elevation="10dp"
            android:justificationMode="inter_word"
            android:text="TextView"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/TVmarcadornum" />

        <TextView
            android:id="@+id/TVubicacionmarker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/TVnombreubicacionmarker"
            app:layout_constraintStart_toStartOf="@+id/TVnombreubicacionmarker"
            app:layout_constraintTop_toBottomOf="@+id/TVnombreubicacionmarker" />

        <TextView
            android:id="@+id/TVmasinformacionmarker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/TVubicacionmarker"
            app:layout_constraintStart_toStartOf="@+id/TVubicacionmarker"
            app:layout_constraintTop_toBottomOf="@+id/TVubicacionmarker" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="DESCRIPCION"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/TVmasinformacionmarker"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/TVmasinformacionmarker" />

        <TextView
            android:id="@+id/TVdescripcionmarker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:justificationMode="inter_word"
            app:layout_constraintEnd_toEndOf="@+id/TVmasinformacionmarker"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Button
            android:id="@+id/BTNviajarmarker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button"
            android:backgroundTint="@null"
            android:backgroundTintMode="@null"
            android:text="INICIAR VIAJE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/TVdescripcionmarker"
            app:layout_constraintStart_toStartOf="@+id/TVdescripcionmarker"
            app:layout_constraintTop_toBottomOf="@+id/SWhabilitar" />

        <Switch
            android:id="@+id/SWhabilitar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Habilitar"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/TVdescripcionmarker"
            app:layout_constraintStart_toStartOf="@+id/TVdescripcionmarker"
            app:layout_constraintTop_toBottomOf="@+id/TVdescripcionmarker" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>