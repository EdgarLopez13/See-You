<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PerfilFragment">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navegador2"
        style="@style/BottomNavigation"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondodegradado">

            <TextView
                android:id="@+id/TVtitulorutas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:fontFamily="sans-serif-condensed-light"
                android:text="PERFIL"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="@drawable/button2"
        android:text="Cerrar Sesion"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/TVcelularUsuario"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/TVcelularUsuario" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogin"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:srcCompat="@drawable/user"
        tools:src="@drawable/user" />

    <TextView
        android:id="@+id/TVnombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="25dp"
        android:text="Nombre Del Usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/TVcorreoelectronico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Correo Electronico Del Usuario"
        app:layout_constraintEnd_toEndOf="@+id/TVnombreUsuario"
        app:layout_constraintStart_toStartOf="@+id/TVnombreUsuario"
        app:layout_constraintTop_toBottomOf="@+id/TVnombreUsuario" />

    <TextView
        android:id="@+id/TVcelularUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Telefono Celular Del Usuario"
        app:layout_constraintEnd_toEndOf="@+id/TVcorreoelectronico"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/TVcorreoelectronico"
        app:layout_constraintTop_toBottomOf="@+id/TVcorreoelectronico" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="@+id/navegador2"
        app:layout_constraintStart_toStartOf="@+id/navegador2"
        app:layout_constraintTop_toBottomOf="@+id/navegador2" />

</androidx.constraintlayout.widget.ConstraintLayout>